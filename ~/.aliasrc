#
# # ex - archive extractor
# # usage: ex <file>
ex() {
  if [ -f "$1" ] ; then
    case $1 in
      *.tar.bz2)   tar xjf "$1"   ;;
      *.tar.gz)    tar xzf "$1"   ;;
      *.tar.xz)    tar xJf "$1"   ;;
      *.tar.zst)   unzstd "$1"    ;;
      *.tar)       tar xf "$1"    ;;
      *.tbz2)      tar xjf "$1"   ;;
      *.tgz)       tar xzf "$1"   ;;
      *.bz2)
            if command -v pbzip2 > /dev/null;
            then pbzip2 -k -d "$1";
            else bunzip2 -k -d "$1";
            fi
        ;;
      *.gz)
            if command -v pigz > /dev/null;
            then pigz -k -d "$1"
            else gunzip -k -d "$1"
            fi
        ;;
      *.rar)       unrar x "$1"   ;;
      *.zip)       unzip -o "$1"  ;;
      *.Z)         uncompress "$1";;
      *.7z)        7z x "$1"      ;;
       *.deb)      ar x "$1"      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    >&2 echo "'$1' is not a valid file"
  fi
}
