# File age (since last modification)
filemage() {
    local fm ts
    ts=$(date "+%s")
    if ! fm=$(stat -c '%Y' "$1" 2> /dev/null) || [ -z "$fm" ]; then return 1; fi

    echo $(( ts - fm ))
}

# Convert a number to memory unit (K, M, G)
mem_unit() {
    local sum=${1:-$(cat)}
    local unit=B
    if [ "$sum" -gt 1024 ]; then
        sum=$(( sum / 1024 ))
        unit=K
        if [ $sum -gt 1024 ]; then
            sum=$(( sum / 1024 ))
            unit=M
            if [ $sum -gt 1024 ]; then
                sum=$(( sum / 1024 ))
                unit=G
            fi
        fi
    fi
    echo "$sum$unit"
}

