# $ .. [nr]
# @author DUzun.Me
function ..() {
    local i=$1
    if [ $# -eq 0 ]
    then
        i=1
    fi
    local LASTDIR=$PWD
    while [ $i -gt 0 ]
    do
        cd ..
        i=$((i - 1))
    done
    export OLDPWD=$LASTDIR
}

