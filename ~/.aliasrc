getspfranges() {
    domainsToDig=$(dig @8.8.8.8 "_spf.$1" TXT +short | \
    sed \
        -e 's/"v=spf1//' \
        -e 's/ ~all"//' \
        -e 's/ include:/\n/g' | \
    tail -n+2)
    for domain in $domainsToDig ; do
        dig @8.8.8.8 "$domain" TXT +short | \
            sed \
                -e 's/"v=spf1//' \
                -e 's/ ~all"//' \
                -e 's/ ip.:/\n/g' | \
            tail -n+2
    done
}

