# ------------------------------------------------------------------------------
# syncthing rename: Rename files restored from .stversion
strename() {
    o=$(realpath -- "$1")
    d=$(dirname "$o")
    b=$(basename "$o")
    n=$(echo "$b" | sed -r 's/^(.+)\~[0-9]{8,8}\-[0-9]{6,6}(\..+)?/\1\2/; s/^\~[0-9]{8,8}\-[0-9]{6,6}(\..+)/\1/');

    if [ -d "$o" ]; then
        ( shopt -s dotglob && cd "$o" && for i in *; do strename "$i"; done; );
    fi;

    if [[ "$n" != "$b" ]]; then
        echo "$d: $b -> $n";
        mv -- "$o" "$d/$n";
    fi;
}

