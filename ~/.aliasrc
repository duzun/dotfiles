# Functions
#alias ..="cd .."

# $ .. [nr]
function ..() {
    local i=$1
    if [ $# -eq 0 ]
    then
        i=1
    fi
    local LASTDIR=$PWD
    while [ $i -gt 0 ]
    do
        cd ..
        i=$(($i - 1))
    done
    export OLDPWD=$LASTDIR
}

# $ up "part_str"
function up {
    local up=`expr "$PWD" : "^\(.*$1[^/]*\)"`
    [ "x$up" == "x" ] || cd $up
}

function f() {
    find $PWD -type f -name $1
}

# This alias recursively destroys all .DS_Store files in the folder I am currently in
alias killDS='find . -name *.DS_Store -type f -delete'

