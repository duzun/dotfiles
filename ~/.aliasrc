# Strip whitespace (or other characters) from the beginning and end of a string
# eg. echo "  x " | trim          -> "x"
# eg. echo "..x." | trim '.'      -> "x"
# eg. echo ".,x.," | trim '.' ',' -> ",x."
trim() {
    local l r
    if [ $# -eq 0 ]; then
        sed -r 's/^[[:space:]]*//g; s/[[:space:]]*$//g'
    else
        l=${1}
        r=${2:-$1}
        sed -r "s/^[$l]*//g; s/[$r]*\$//g"
    fi
}

